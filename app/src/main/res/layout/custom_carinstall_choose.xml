<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_margin="33dp"
              android:gravity="center_vertical"
              android:orientation="vertical">


    <android.support.v7.widget.AppCompatCheckBox
        android:id="@+id/cb_install_cam"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="安装独立行车记录仪"/>

    <android.support.v7.widget.AppCompatCheckBox
        android:id="@+id/cb_install_temp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="安装胎压监测系统"/>

    <android.support.v7.widget.AppCompatCheckBox
        android:id="@+id/cb_install_cam_temp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="安装胎压+行车记录仪二合一产品"/>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        >

        <com.dd.processbutton.FlatButton
            android:id="@+id/btn_check"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="确定"
            app:pb_colorNormal="@color/colorPrimary"/>


        <com.dd.processbutton.FlatButton

            android:id="@+id/btn_check_off"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="取消"
            app:pb_colorNormal="@color/colorPrimary"/>
    </RelativeLayout>
</LinearLayout>
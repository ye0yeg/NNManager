<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".feature.MenuActivity"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_normal"
            android:background="@drawable/horizontal_bar_bg">

            <TextView
                android:id="@+id/text_customer_manager"
                style="@style/HorizontalItemTextView"
                android:drawableLeft="@drawable/ic_help"
                android:gravity="center_vertical"
                android:text="客户管理"/>
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_tiny"
            android:background="@drawable/horizontal_bar_bg">

            <TextView
                android:id="@+id/text_manage_payment"
                style="@style/HorizontalItemTextView"
                android:drawableLeft="@drawable/ic_help"
                android:gravity="center_vertical"
                android:text="订单管理"/>
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_tiny"
            android:background="@drawable/horizontal_bar_bg">

            <TextView
                android:id="@+id/text_help"
                style="@style/HorizontalItemTextView"
                android:drawableLeft="@drawable/ic_help"
                android:gravity="center_vertical"
                android:text="信息查询"/>
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_tiny"
            android:background="@drawable/horizontal_bar_bg">

            <TextView
                android:id="@+id/text_update"
                style="@style/HorizontalItemTextView"
                android:drawableLeft="@drawable/ic_cheapest_normal"
                android:gravity="center_vertical"
                android:text="检查更新"/>
        </FrameLayout>


    </LinearLayout>
</ScrollView>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <include
        layout="@layout/partial_action_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/horizontal_bar_bg"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text_remaining"
            style="@style/HorizontalItemTextView"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="当前余额："
            />

        <TextView
            android:id="@+id/text_remaining_number"
            style="@style/HorizontalItemTextViewNotRight"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="2000"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/horizontal_bar_bg"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text_input"
            style="@style/HorizontalItemTextView"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="输入金额："
            />

        <EditText
            android:id="@+id/edit_input_charge"
            style="@style/HorizontalItemTextViewNotRight"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:hint="请输入最低 10000 "
            android:maxLines="1"
            />
    </LinearLayout>

    <Button
        android:id="@+id/btn_confirm_charge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:background="@drawable/normal_button_green"
        android:text="确认"
        />


    <Button
        android:id="@+id/btn_cancel_charge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:background="@drawable/normal_button"
        android:text="取消"
        />

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <com.dd.processbutton.FlatButton
        android:id="@+id/fb_car_wash"
        android:layout_width="145dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:text="洗车服务"
        app:pb_colorNormal="@color/colorPrimary"
        app:pb_colorPressed="@color/colorAccent" />

    <com.dd.processbutton.FlatButton
        android:id="@+id/fb_car_improve"
        android:layout_width="145dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:text="美容"
        app:pb_colorNormal="@color/colorPrimary"
        app:pb_colorPressed="@color/colorAccent" />

    <com.dd.processbutton.FlatButton
        android:id="@+id/fb_car_keep"
        android:layout_width="145dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:text="保养"
        app:pb_colorNormal="@color/colorPrimary"
        app:pb_colorPressed="@color/colorAccent" />

    <Button
        android:id="@+id/btn_4"
        android:layout_width="145dp"
        android:layout_height="40dp"
        android:text="钣金喷漆"
        android:visibility="gone" />

    <com.dd.processbutton.FlatButton
        android:id="@+id/fb_car_tyre"
        android:layout_width="145dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:text="轮胎"
        app:pb_colorNormal="@color/colorPrimary"
        app:pb_colorPressed="@color/colorAccent" />

    <com.dd.processbutton.FlatButton
        android:id="@+id/fb_car_install"
        android:layout_width="145dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:text="安装"
        app:pb_colorNormal="@color/colorPrimary"
        app:pb_colorPressed="@color/colorAccent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/horizontal_bar_bg"
        android:orientation="horizontal"
        android:paddingBottom="3dp"
        android:paddingTop="10dp">


        <com.dd.processbutton.FlatButton
            android:id="@+id/fb_next"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_weight="1"
            android:text="填写完啦？下一步"
            app:pb_colorNormal="@color/colorAccent" />

    </LinearLayout>

</LinearLayout>
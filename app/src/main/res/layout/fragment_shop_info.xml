<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/horizontal_bar_bg"
                android:orientation="horizontal"
                android:paddingBottom="3dp"
                android:paddingTop="3dp">

                <TextView
                    android:id="@+id/text_shop_name"
                    style="@style/HorizontalItemTextViewNotRight"
                    android:layout_weight="2"
                    android:clickable="false"
                    android:gravity="center"
                    android:text="店铺名称："
                    />

                <EditText
                    android:id="@+id/edit_shop_name"
                    style="@style/HorizontalItemEditViewNotRight"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:hint="请输入店铺名称"
                    android:maxLines="1"/>

                <ImageView
                    android:id="@+id/dect_shop_name"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_selected"
                    android:visibility="gone"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/horizontal_bar_bg"
                android:orientation="horizontal"
                android:paddingBottom="3dp"
                android:paddingTop="3dp">

                <TextView
                    android:id="@+id/text_owner"
                    style="@style/HorizontalItemTextViewNotRight"
                    android:layout_weight="2"
                    android:clickable="false"
                    android:gravity="center"
                    android:text="店主名称："
                    />

                <EditText
                    android:id="@+id/edit_owner_name"
                    style="@style/HorizontalItemEditViewNotRight"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:hint="请输入店主名称"
                    android:maxLines="1"
                    />

                <ImageView
                    android:id="@+id/dect_owner_name"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:visibility="gone"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/horizontal_bar_bg"
                android:orientation="horizontal"
                android:paddingBottom="3dp"
                android:paddingTop="3dp">

                <TextView
                    android:id="@+id/text_main_name"
                    style="@style/HorizontalItemTextViewNotRight"
                    android:layout_weight="2"
                    android:clickable="false"
                    android:gravity="center"
                    android:text="店主账号"
                    />

                <android.support.v7.widget.AppCompatEditText
                    android:id="@+id/edit_main_name"
                    style="@style/HorizontalItemEditViewNotRight"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:hint="请输入店主账号"
                    android:maxLines="1"
                    />

                <ImageView
                    android:id="@+id/dect_main_name"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:visibility="gone"
                    />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/horizontal_bar_bg"
                android:orientation="horizontal"
                android:paddingBottom="3dp"
                android:paddingTop="3dp">

                <TextView
                    android:id="@+id/text_level"
                    style="@style/HorizontalItemTextViewNotRight"
                    android:layout_weight="2"
                    android:clickable="false"
                    android:gravity="center"
                    android:text="店铺等级："
                    />

                <android.support.v7.widget.AppCompatEditText
                    android:id="@+id/edit_level"
                    style="@style/HorizontalItemEditViewNotRight"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:hint="店铺等级"
                    android:maxLines="1"
                    />

                <ImageView
                    android:id="@+id/dect_level"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:visibility="gone"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/horizontal_bar_bg"
                android:orientation="horizontal"
                android:paddingBottom="3dp"
                android:paddingTop="3dp">

                <TextView
                    android:id="@+id/text_intro"
                    style="@style/HorizontalItemTextViewNotRight"
                    android:layout_weight="2"
                    android:clickable="false"
                    android:gravity="center"
                    android:text="店铺介绍："
                    />

                <android.support.v7.widget.AppCompatEditText
                    android:id="@+id/edit_intro"
                    style="@style/HorizontalItemEditViewNotRight"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:hint="请输入店铺介绍"
                    android:maxLines="1"
                    />

                <ImageView
                    android:id="@+id/dect_intro"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:visibility="gone"
                    />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/horizontal_bar_bg"
                android:orientation="horizontal"
                android:paddingBottom="3dp"
                android:paddingTop="3dp">

                <TextView
                    android:id="@+id/text_contact"
                    style="@style/HorizontalItemTextViewNotRight"
                    android:layout_weight="2"
                    android:clickable="false"
                    android:gravity="center"
                    android:text="联系方式："
                    />

                <android.support.v7.widget.AppCompatEditText
                    android:id="@+id/edit_contact"
                    style="@style/HorizontalItemEditViewNotRight"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:hint="请输入联系方式，可用逗号隔开"
                    android:maxLines="1"
                    />

                <ImageView
                    android:id="@+id/dect_contact"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:visibility="gone"
                    />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/horizontal_bar_bg"
                android:orientation="horizontal"
                android:paddingBottom="3dp"
                android:paddingTop="3dp">

                <TextView
                    android:id="@+id/text_address"
                    style="@style/HorizontalItemTextViewNotRight"
                    android:layout_weight="2"
                    android:clickable="false"
                    android:gravity="center"
                    android:text="地址："
                    />

                <android.support.v7.widget.AppCompatEditText
                    android:id="@+id/edit_address"
                    style="@style/HorizontalItemEditViewNotRight"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:hint="请输入地址"
                    android:maxLines="1"
                    />

                <ImageView
                    android:id="@+id/dect_address"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:visibility="gone"
                    />
            </LinearLayout>

            <com.dd.processbutton.iml.ActionProcessButton
                android:id="@+id/btnUpload"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="上传图片"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                app:pb_colorComplete="@color/colorPrimaryDark"
                app:pb_colorNormal="@color/colorPrimary"
                app:pb_colorPressed="@color/colorAccent"
                app:pb_textComplete="上传完成!"
                app:pb_textProgress="上传中……"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/horizontal_bar_bg"
                android:orientation="horizontal"
                android:paddingBottom="3dp"
                android:paddingTop="10dp">


                <com.dd.processbutton.FlatButton
                    android:id="@+id/fb_next"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_weight="1"
                    android:text="填写完啦？下一步"
                    app:pb_colorNormal="@color/colorAccent"/>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>